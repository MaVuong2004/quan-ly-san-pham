<!DOCTYPE html> <html> <head> <meta charset="UTF-8"> <title>Qu·∫£n l√Ω s·∫£n ph·∫©m b·∫±ng QR</title> <script src="https://unpkg.com/html5-qrcode"></script> <style> body { font-family: Arial; padding: 20px; } #reader { width: 300px; margin-bottom: 20px; } li { margin: 5px 0; } #manual-input { margin-top: 20px; } </style> </head> <body> <h1>Qu√©t s·∫£n ph·∫©m</h1> <div id="reader"></div> <h2>Danh s√°ch s·∫£n ph·∫©m:</h2> <ul id="product-list"></ul> <h2>T·ªïng ti·ªÅn: <span id="total">0</span> VNƒê</h2> <div id="manual-input"> <input type="text" id="manual-id" placeholder="Nh·∫≠p m√£ s·∫£n ph·∫©m..."> <button onclick="addManual()">‚úî Th√™m</button> </div> <script> const sheetURL = "https://docs.google.com/spreadsheets/d/1ZETWL6NP4soFwOMrw03p8o32a3Mbh3tgx--M4sOgZZ0/export?format=csv"; let products = {}; let total = 0; fetch(sheetURL) .then(res => res.text()) .then(csv => { const lines = csv.split("\n"); lines.slice(1).forEach(line => { const [id, name, price] = line.split(","); if (id && name && price) { const cleanId = id.trim().toUpperCase(); const cleanName = name.trim(); const cleanPrice = parseInt(price.trim().replace(/\D/g, "")); if (!isNaN(cleanPrice)) { products[cleanId] = { name: cleanName, price: cleanPrice }; console.log("üì¶ ƒê√£ n·∫°p:", cleanId, products[cleanId]); } else { console.warn("‚ö† Kh√¥ng ƒë·ªçc ƒë∆∞·ª£c gi√°:", line); } } }); }); function addProduct(id) { const key = id.trim().toUpperCase(); if (!products[key]) return alert("‚ùå Kh√¥ng t√¨m th·∫•y s·∫£n ph·∫©m: " + key); const li = document.createElement("li"); li.textContent = `‚úî ${products[key].name} - ${products[key].price} VNƒê`; document.getElementById("product-list").appendChild(li); total += products[key].price; document.getElementById("total").textContent = total; } function addManual() { const input = document.getElementById("manual-id"); const id = input.value; if (!id) return; console.log("üñä M√£ nh·∫≠p tay:", id); addProduct(id); input.value = ""; } // K√≠ch ho·∫°t camera (ch·ªâ ho·∫°t ƒë·ªông khi thi·∫øt b·ªã c√≥ camera) if (navigator.mediaDevices && navigator.mediaDevices.getUserMedia) { new Html5Qrcode("reader").start( { facingMode: "environment" }, { fps: 10, qrbox: 250 }, decodedText => { const id = decodedText.trim(); console.log("üíæ M√£ ƒë√£ qu√©t:", id); addProduct(id); } ).catch(err => console.error("‚ùå L·ªói camera:", err)); } else { document.getElementById("reader").textContent = "Thi·∫øt b·ªã kh√¥ng h·ªó tr·ª£ camera."; } </script> </body> </html>
